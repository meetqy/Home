---
import { languages } from "../i18n/ui";
import { getLangFromUrl } from "../i18n/utils";

const curLang = getLangFromUrl(Astro.url);
---

<ul class="flex">
  {
    Object.entries(languages).map(([lang]) => (
      <li class="flex transition-all">
        <a
          class={
            lang === curLang
              ? "text-slate-800 dark:text-slate-100 font-bold uppercase"
              : "text-slate-500"
          }
          href={`/${lang}/`}>
          {lang}
        </a>
        {lang != "zh" && <span class="mx-1 text-slate-500">/</span>}
      </li>
    ))
  }
</ul>
